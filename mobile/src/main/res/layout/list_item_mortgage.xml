<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_deal"
    android:paddingBottom="@dimen/size_byte"
    android:paddingLeft="@dimen/size_word"
    android:paddingRight="@dimen/size_word"
    android:paddingTop="@dimen/size_byte">

    <ImageView
        android:id="@+id/MortgageThumbnail"
        android:layout_width="@dimen/mortgage_thumbnail_width"
        android:layout_height="@dimen/mortgage_thumbnail_height"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/MortgageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/MortgageThumbnail"
        android:layout_marginLeft="56dp"
        android:alpha="0.87"
        android:gravity="right"
        android:padding="@dimen/size_half_byte"
        android:textSize="@dimen/size_text_primary"/>

    <TextView
        android:id="@+id/MortgageReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/MortgageTitle"
        android:alpha="0.87"
        android:padding="@dimen/size_half_byte"
        android:textSize="@dimen/size_text_secondary"/>

    <RatingBar
        android:id="@+id/MortgageAudienceScore"
        style="@android:style/Widget.Holo.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/MortgageReleaseDate"
        android:isIndicator="true"
        android:max="5"
        android:numStars="0"/>

</RelativeLayout>