<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/title_fonts_appearances" >
        <ListPreference
            android:title="@string/theme_title_change"
            android:dialogTitle="@string/theme_title_list_dialog"
            android:summary="@string/theme_summary"
            android:entries="@array/entries_list_preference"
            android:entryValues="@array/entry_values_list_preference"
            android:defaultValue="Black"
            android:key="AppTheme"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_wifi_data">
        <SwitchPreference
            android:title="@string/data_title"
            android:summaryOn="@string/data_summary_on"
            android:summaryOff="@string/data_summary_off"
            android:defaultValue="false"
            android:key="WiFi"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_notifications" >
        <Preference
            android:title="@string/about_title"
            android:summary="@string/about_summary">
            <intent android:action="com.ibm.clientcenters.activities.ActivityAbout"/>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
